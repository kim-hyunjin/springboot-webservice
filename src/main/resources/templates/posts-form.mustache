{{>layout/header}}

<main role="main">
    <div class="container">
        <div class="col-md-12 d-flex flex-column justify-content-center align-items-center" style="padding-top:5em;">
            <h1>게시글 등록</h1>
            <div class="col-md-8">
                <form>
                    <input type="hidden" class="form-control" id="author" value="{{user.name}}">
                    <div class="form-group">
                        <label for="title">제목</label>
                        <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
                    </div>
                    <div class="form-group">
                        <label for="content"> 내용 </label>
                        <textarea class="form-control" id="content" placeholder="내용을 입력하세요" rows="15"></textarea>
                    </div>
                </form>
                <div class="row d-flex flex-row-reverse">
                    <a href="/" role="button" class="btn btn-secondary">목록으로</a>
                    <button type="button" class="btn btn-primary mx-1" id="btn-save">등록</button>
                </div>
            </div>
        </div>
    </div>
</main>

{{>layout/footer}}