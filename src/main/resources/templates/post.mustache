{{>layout/header}}
<main role="main">
    <div class="container">
        <div class="col-md-12 d-flex flex-column justify-content-center align-items-center" style="padding-top:5em;">
            <div class="col-md-8">
                <form>
                    <div class="form-group">
                        <label for="id">글 번호</label>
                        <input type="text" class="form-control" id="id" value="{{post.id}}" readonly style="background-color:white;">
                    </div>
                    <div class="form-group">
                        <label for="title">제목</label>
                        <input type="text" class="form-control" id="title" value="{{post.title}}" readonly style="background-color:white;">
                    </div>
                    <div class="form-group">
                        <label for="title">작성자</label>
                        <input type="text" class="form-control" id="title" value="{{post.author}}" readonly style="background-color:white;">
                    </div>
                    <div class="form-group">
                        <label for="content">내용</label>
                        <textarea type="text" class="form-control" id="content" rows="15" readonly style="background-color:white;">{{post.content}}</textarea>
                    </div>
                </form>
                <div class="row d-flex flex-row-reverse">
                    <a href="/" role="button" class="btn btn-secondary">목록으로</a>
                </div>
            </div>
        </div>
    </div>
</main>

{{>layout/footer}}